<div class="header-bar fixed-top d-flex justify-content-between align-items-center">
    <img src="~/pictures/logo.png" alt="Logo" class="logo-small" />
    <ul class="navbar-nav flex-row ms-3">
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Home", "Account")">Home</a>
        </li>
    </ul>
</div>

